@using LEotA.Services
@inject CommonLocalizationService localizer
<div class="g-color-white-opacity-0_8">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center text-md-left">
        <div class="d-lg-flex">
          <small class="d-block mr-5 ">@localizer.Get("Footer")</small>
          <small class="align-right ml-5">@localizer.Get("FooterSocial")</small>
          <ul class="u-list-inline hidden-sm-down">
            <li class="list-inline-item">
              <a class="btn btn-outline-light btn-floating m-1" role="button">
                <i class="fab fa-twitter"></i>
              </a>
            </li>
            <li class="list-inline-item">
              <a class="btn btn-outline-light btn-floating m-1" role="button">
                <i class="fab fa-instagram"></i>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
