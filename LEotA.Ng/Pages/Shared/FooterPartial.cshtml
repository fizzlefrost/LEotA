@using LEotA.Services
@inject CommonLocalizationService localizer
<div class="g-color-white-opacity-0_8">
  <div class="container">
    <div class="row">
      <div class="col-6">
        <small class="d-block mr-5 ">@localizer.Get("Footer")</small>
      </div>
      <div class="row">
        <div class="col">
          <ul>
            <li>
              <small>
                <a class="text-white" asp-area="" asp-page="/Index">@localizer.Get("Home")</a>
              </small>
            </li>
            <li>
              <small>
                <a class="text-white" asp-area="" asp-page="/Index">@localizer.Get("AboutUs")</a>
              </small>
            </li>
            <li>
              <small>
                <a class="text-white" asp-area="" asp-page="/Index">@localizer.Get("Events")</a>
              </small>
            </li>
            <li>
              <small>
                <a class="text-white" asp-area="" asp-page="/Index">@localizer.Get("Gallery")</a>
              </small>
            </li>
          </ul>
        </div>
        <div class="col">
          <ul>
            <li>
              <small >
                <a class="text-white" asp-area="" asp-page="/Index">@localizer.Get("Projects")</a>
              </small>
            </li>
            <li>
              <small>
                <a class="text-white" asp-area="" asp-page="/Index">@localizer.Get("Publications")</a>
              </small>
            </li>
            <li>
              <small>
                <a class="text-white" asp-area="" asp-page="/Index">@localizer.Get("Staff")</a>
              </small>
            </li>
            <li>
              <small>
                <a class="text-white" asp-area="" asp-page="/Index">@localizer.Get("Materials")</a>
              </small>
            </li>
          </ul>
        </div>
      </div>
      <div class="col">@localizer.Get("FooterSocial")
        <ul class="u-list-inline hidden-sm-down">
          <li class="list-inline-item">
            <a class="btn btn-outline-light btn-floating m-1" role="button">
              <i class="fab fa-twitter"></i>
            </a>
          </li>
          <li class="list-inline-item">
            <a class="btn btn-outline-light btn-floating m-1" role="button">
              <i class="fab fa-instagram"></i>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
