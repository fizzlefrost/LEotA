@using LEotA.Services
@using System.Threading
@inject CommonLocalizationService localizer

<title>@ViewData["Title"] - @localizer.Get("Localisation")</title>

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow" id="nav-bg">
    <div class="container nav-container">
        <!-- Иконки, растянутые по всему экрану -->
        <div class="icons-container">
            <div>
                <img src="/images/Лого1 (1).png" style="max-height: 70px;">
            </div>
            <div>
                <img src="/header.png" style="max-height: 70px;">
            </div>
            <div>
                <img src="/Min-nauki.png" style="max-height: 70px;">
            </div>
            <div>
                <img src="/images/INKK.png" style="max-height: 70px;">
            </div>
        </div>

        <div class="space" data-height="20px" data-width="100%"></div>

        <div class="main-logo">
            @if (Thread.CurrentThread.CurrentUICulture.Name == "ru")
            {
                <a class="navbar-brand" asp-route-culture="@Context.Request.RouteValues["culture"]" asp-area="" asp-page="/Index">
                    <img style="max-width: 80%;" src="/images/Logo LEA RUS full white.png">
                </a>
            }
            else
            {
                <a class="navbar-brand" asp-route-culture="@Context.Request.RouteValues["culture"]" asp-area="" asp-page="/Index">
                    <img style="max-width: 80%;" src="/images/SecondLogo.png">
                </a>
            }

            <!-- Переключатель языка -->
            <div class="language-switcher">
                @if (Thread.CurrentThread.CurrentUICulture.Name == "ru")
                {
                    <img src="/images/ru.svg" style="max-width: 30px;">
                }
                else
                {
                    <img src="/images/us.svg" style="max-width: 30px;">
                }
                <vc:culture-switcher />
            </div>
        </div>
        
        <div class="space" data-height="20px" data-width="100%"></div>
    </div>
</nav>


<nav style="background-color: #7d78c8; padding: 1rem;" class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3">
    <div class="container-fluid" style="padding-left: 10%; padding-right: 10%">
        <div id="page-wrapper" class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-route-culture="@Context.Request.RouteValues["culture"]" asp-area="" asp-page="/MainPage">@localizer.Get("Home")</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-route-culture="@Context.Request.RouteValues["culture"]" asp-area="" asp-page="/AboutUs">@localizer.Get("AboutUs")</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-route-culture="@Context.Request.RouteValues["culture"]" asp-area="" asp-page="/Publications">@localizer.Get("Publications")</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-route-culture="@Context.Request.RouteValues["culture"]" asp-area="" asp-page="/Staff">@localizer.Get("Staff")</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-route-culture="@Context.Request.RouteValues["culture"]" asp-area="" asp-page="/MaterialsPage">@localizer.Get("Gallery")</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
