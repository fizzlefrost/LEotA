@page "/AboutUs"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Localization
@using LEotA.Services
@model LEotA.Pages.AboutUsModel
@inject CommonLocalizationService localizer
@{
    ViewBag.Title = "My Home Page";
    var culture = HttpContext.Features.Get<IRequestCultureFeature>().RequestCulture.Culture.Name;
}
@{
    try
    {
        foreach (var aboutUs in ((List<AboutUs>) ViewData["aboutUs"]))
        {
            @* <img alt="" src="@ViewData["img8642ECA1-1577-40C8-6FAA-08D98E3B2BA1"]" style="height:256px;width:256px;"/> *@
            <div class="container">
                <header class="align-items-start flex-wrap">
                    <div class="row">
                        <div class="">
                            <div class="">
                                <h3>@localizer.Get("LabName")</h3>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                         <div class="">
                            <img class="floatingimg" src="IMG_5122.JPG" width="50%" height="30%"/>
                            <p>@LocalizationHelper.GetTextByCulture(aboutUs.Text, culture)</p>
                        </div>
                    </div>
                </header>
            </div>
        }
    }
    catch (Exception e)
    {
        <div class="container">
            <h1>Who We Are</h1>
        </div>
        <div class="container-fluid">
            <img src="images/_JPG0366.JPG" style="min-width: 100%">
        </div>
        <div class="container">
            <hr aria-hidden="true" class="mb-3">
            <p class="align-center"> SOME TEXT THAT IS USED FOR TESTING</p>
            <hr aria-hidden="true" class="mt-3">
        </div>
    }
}

