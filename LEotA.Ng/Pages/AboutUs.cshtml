@page "/AboutUs"
@using LEotA.Services
@using Microsoft.AspNetCore.Localization
@model LEotA.Pages.AboutUsModel
@inject CommonLocalizationService localizer
@{
  try
  {
    ViewBag.Title = "My Home Page";
    var culture = HttpContext.Features.Get<IRequestCultureFeature>().RequestCulture.Culture.Name;
    var aboutUs = (List<AboutUs>)ViewData["aboutUs"];
    var image = (Dictionary<List<FileContent>, AboutUs>) ViewData["images"];
  
    <div id="carouselExampleControls" class="carousel slide narrower" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="/images/_JPG0366.JPG" class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            @if (culture == "en")
            {
              <h4>About Us</h4>
              <h1 id="firstslide">
                Международная научно-исследовательская лаборатория
                «Лингвистическая экология Арктики»
              </h1>
            }
            else
            {
              <h4>О нас</h4>
              <h1 id="firstslide">
                Международная научно-исследовательская лаборатория
                «Лингвистическая экология Арктики»
              </h1>
            }
          </div>
        </div>
        @foreach (var about in image)
        {
          <div class="carousel-item">
            
            @if (about.Key.Count == 0 || about.Key.Count == null)
            {
              <img src="/images/_JPG0366.JPG" class="d-block w-100" alt="...">
            }
            else
            {
              <img src="data:image;base64,@Convert.ToBase64String(@about.Key.FirstOrDefault().Content)" class="d-block w-100" alt="...">
            }
            
            <div class="carousel-caption d-none d-md-block">
              @if (culture == "en")
              {
                <h4>About Us</h4>
                <h1>
                  International Research Laboratory
                  “Arctic Linguistic Ecology”
                </h1>
                <p>
                  @about.Value.Text.English
                </p>
              }
              else
              {
                <h4>О нас</h4>
                <h1>
                  Международная научно-исследовательская лаборатория
                  «Лингвистическая экология Арктики»
                </h1>
                <p>
                  @about.Value.Text.Russian
                </p>
              }
            </div>
          </div>
        }
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  }
  catch (Exception e)
  {
    <p>NULL</p>
  }
}