@page
@inject IStringLocalizer<IndexModel> localizer
@inject IHtmlLocalizer<IndexModel> htmlLocalizer
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Localization
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var requestCultureFeature = HttpContext.Features.Get<IRequestCultureFeature>();
    var requestCulture = requestCultureFeature.RequestCulture;
}
<div class="text-center">
    <h1 class="display-4">@localizer["Welcome"]</h1>
    <p>@htmlLocalizer["Learn"]</p>
</div>
<div class="text-center">
    <a asp-page="/AdminPanel">Admin</a>
    <br>
    <a asp-page="/Login">Admin Login</a>
     
     
    @if(User.Identity.IsAuthenticated)
    {
        <p>@User.Identity.Name</p>
     
        <form method="post" asp-controller="Account" asp-action="Logout">
            <input type="submit" value="Выход" />
        </form>
    }
    else
    {
        <a asp-page="/Login">@requestCulture.UICulture.Name</a>
        <a asp-page="/Register">Регистрация</a>
        <a asp-page="/GetClientSecretTestPage">GETCLIENTTESTTAPGE</a>
    }

    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>