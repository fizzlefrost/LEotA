@model LEotA.Engine.Web.ViewModels.AccountViewModels.RegisterViewModel

<div class="row">

    <div class="col-md-6 offset-md-3">

        <h1>Enter zone</h1>

        <form method="post" action="@Url.Action("Register", "Account")" >
            
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input class="form-control" type="text" asp-for="LastName" />
            </div>
            
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input class="form-control" type="text" asp-for="FirstName" />
            </div>
            
            <div class="form-group">
                <label asp-for="PatronimicName"></label>
                <input class="form-control" type="text" asp-for="PatronimicName" />
            </div>
            
            <div class="form-group">
                <label asp-for="EmbedLink"></label>
                <input class="form-control" type="text" asp-for="EmbedLink" />
            </div>
            
            <div class="form-group">
                <label asp-for="Email"></label>
                <input class="form-control" type="text" asp-for="Email" />
            </div>
            
            <div class="form-group">
                <label asp-for="Password"></label>
                <input class="form-control" type="password" asp-for="Password" />
            </div>
            
             <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input class="form-control" type="password" asp-for="ConfirmPassword" />
            </div>
            <p>
                <button class="btn btn-primary" type="submit">Register</button>
            </p>

        </form>
    </div>
</div>